<layouts>
    <!-- A generic, centered layout. -->
    <layout id="MainLayout">

        <!-- Current time label -->
        <label id="current_time" color="Graphics.COLOR_WHITE" font="Graphics.FONT_TINY" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>


        <!-- Heart rate label -->
        <label id="hr_label" color="Graphics.COLOR_LT_GRAY" font="Graphics.FONT_TINY" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
        <label id="hr_value" color="Graphics.COLOR_WHITE" font="Graphics.FONT_LARGE" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>

        <!-- Distance label -->
        <label id="dist_label" color="Graphics.COLOR_LT_GRAY" font="Graphics.FONT_TINY" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
        <label id="dist_value" color="Graphics.COLOR_WHITE" font="Graphics.FONT_LARGE" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>

        <!-- Pace label -->
        <label id="pace_label" color="Graphics.COLOR_LT_GRAY" font="Graphics.FONT_TINY" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
        <label id="pace_value" color="Graphics.COLOR_WHITE" font="Graphics.FONT_LARGE" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>

        <!-- Average pace -->
        <label id="avg_pace_label" color="Graphics.COLOR_LT_GRAY" font="Graphics.FONT_TINY" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
        <label id="avg_pace_value" color="Graphics.COLOR_WHITE" font="Graphics.FONT_LARGE" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>

        <!-- Elapsed time -->
        <label id="elapsed_time" color="Graphics.COLOR_WHITE" font="Graphics.FONT_TINY" background="Graphics.COLOR_TRANSPARENT" justification="Graphics.TEXT_JUSTIFY_CENTER"/>

    </layout>
</layouts>

